Type: Package
Package: cardelino
Title: Clone Identification from Single Cell Data
Version: 0.6.5
Date: 2021-07-01
Authors@R: 
    c(person(given = "Yuanhua",
             family = "Huang",
             role = "aut",
             email = "yuanhua@hku.hk"),
      person(given = "Davis",
             family = "McCarthy",
             role = c("aut", "cre"),
